{% extends "admin/layout.njk" %}

{% block main %}
<div class="chef-show">
    <section class="head">
        <h3>Chef: {{chef.name}}</h3>
        {% if permission %}
            <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        {% endif%}
    </section>
    <section class="chef">
        <div class="avatar" style="background: url({{chef.file.src}}) no-repeat center center /cover"></div>
        <h2>{{chef.name}}</h2>
        <h3>{{chef.total_recipes}} receitas</h3>
    </section>
    <section class="recipes">
        <h2>Receitas</h2>
        <div class="cards">
            {% for recipe in chef.recipes%}
                <div class="card">
                    <div class="img" style="background-image: url({{recipe.files[0].src}})">
                    </div>

                    <div class="details">
                        <h1>{{recipe.name}}</h4>
                        <h2>{{recipe.name}}</h5>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

</div>

{% endblock main %}