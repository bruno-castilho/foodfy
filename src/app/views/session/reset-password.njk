{% extends "session/layout.njk" %}
{% block main %}
    <div class="user-new-password">
        {% include "session/mensage.njk" %}  
        <form class="user-new-password" method="POST" action="/admin/password-reset?_method=PUT">
            <section>
                <h1>Esqueceu a Senha?</h1>
                <div class="items">
                    <div class="item">
                        <h2>Email</h2>
                        <input type="email" name="email" placeholder="Digite seu email" {%if error%} id="error"{%endif%}>
                    </div>
                    <div class="item">
                        <h2>Nova senha</h2>
                        <input type="password" name="password" placeholder="Digite sua nova senha" {%if error%} id="error"{%endif%}>
                    </div>
                    <div class="item">
                        <h2>Repitir senha</h2>
                        <input type="password" name="repeat_password" placeholder="Repita sua nova senha" {%if error%} id="error"{%endif%}>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit">Nova senha</button>
                </div>
            </section>
            <input type="hidden" name="token" value="{{token}}">
        </form>
    </div>
    
{% endblock main %}